{
  "name": "jsonata-moment",
  "version": "1.0.0",
  "description": "Moment support for JSONata",
  "main": "jsonata-moment.js",
  "scripts": {
    "test": "npm run build && mocha spec --recursive",
    "prepublishOnly": "npm test",
    "build": "npm run clean && mkdir -p dist && npm run browserify",
    "browserify": "browserify src/jsonata-moment.js --outfile dist/jsonata-moment.js --standalone jsonataMoment",
    "minify": "uglifyjs dist/jsonata-moment.js -o dist/jsonata-moment.min.js --compress --mangle",
    "clean": "rm -rf dist"
  },
  "author": "Elastic.io GmbH",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^14.4.0",
    "chai": "^4.1.1",
    "jsonata": "1.3.0",
    "mocha": "^3.5.0",
    "moment": "2.18.1",
    "uglify-js": "^3.0.28"
  }
}
